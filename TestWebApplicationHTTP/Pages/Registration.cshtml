@page
@model TestWebApplicationHTTP.Pages.RegistrationModel
@{
    ViewData["Title"] = "Регистрация";
    ViewData["AuthSwitch"] = "Регистрация";
}

<!DOCTYPE html>
<html style="font-size: 14px;" lang="ru">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <title>Регистрация</title>
    <style>
        #zatemnenie {
            background: rgba(102, 102, 102, 0.5);
            width: 100%;
            height: 100%;
            position: absolute;
            top: 0;
            left: 0;
           /*  display: none; */
        }

        #okno {
            width: 388px;
            min-height: 215px;
            height: auto;
            background-image: linear-gradient(to right, #2d422d, #304937);
            radius: 14px;
            margin: 296px auto 60px;
        }

        #zatemnenie:target {
            display: block;
        }

        .u-dialog-section-5 .u-dialog-1 {
            width: 388px;
            min-height: 215px;
            height: auto;
            background-image: linear-gradient(to right, #2d422d, #304937);
            --radius: 14px;
            margin: 1em;
        }

        .u-text-custom-color-9 {
            color: #e5dcdc;
        }

        .u-align-center {
            text-align:center;
            vertical-align: central;
        }

        .u-dialog-section-5 .u-container-layout-1 {
            padding: 30px 30px 21px;
        }

        .u-dialog-section-5 .u-text-1 {
            margin: 14px 0 0;
        }

        .u-dialog-section-5 .u-btn-1 {
            --radius: 12px;
            margin: 33px 0 0;
            padding: 10px 115px;
        }

        .u-dialog-section-5 .u-icon-1 {
            width: 20px;
            height: 20px;
        }
    </style>
    <link rel="stylesheet" href="~/css/nicepage.css" media="screen">
    <link rel="stylesheet" href="~/css/Регистрация.css" media="screen">
    <script class="u-script" type="text/javascript" src="~/jquery.js" defer=""></script>
    <script class="u-script" type="text/javascript" src="~/nicepage.js" defer=""></script>
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">

    <script type="application/ld+json">
        {
                "name": "",
                "logo": "images/default-logo.png"
        }
    </script>
</head>
<body class="u-body u-xl-mode" data-lang="ru">
    <section class="u-clearfix u-gradient u-section-1">
        <div class="u-clearfix u-sheet u-sheet-1">
            <img class="u-align-center u-image u-image-circle u-image-contain u-image-1" src="images/auth_person.png" data-image-width="420" data-image-height="419" alt="drawing of a user">
            <h4 class="u-text u-text-default u-text-1">Регистрация</h4>
            <div class="custom-expanded u-align-center u-clearfix u-custom-html u-custom-html-1">
                <style></style>
                <p>Для начала использования сервиса видеонаблюдения необходимо зарегистрироваться. </p>
            </div>
            <div class="u-form u-form-1">
                <form method="post" class="u-clearfix u-form-spacing-10 u-form-vertical u-inner-form" name="form" style="padding: 10px;">
                    <div class="u-form-group u-form-name">
                        <label class="u-label">Логин</label>
                        <input asp-for="User.Login" type="text" name="login" placeholder="Введите логин" class="u-input u-input-rectangle u-palette-1-light-3 u-radius u-input-1" required="required" maxlength="50">
                    </div>
                    <div class="u-form-group u-form-group-2">
                        <label class="u-label">Пароль</label>
                        <input asp-for="User.Password" type="password" name="password" class="u-input u-input-rectangle u-palette-1-light-3 u-radius u-input-2" placeholder="Введите пароль" required="required" maxlength="16">
                    </div>
                    <div class="u-form-email u-form-group">
                        <label class="u-label">Эл. почта</label>
                        <input asp-for="User.Email" type="email" placeholder="Введите Ваш email адрес" name="email" class="u-input u-input-rectangle u-palette-1-light-3 u-radius u-input-3" required="required" maxlength="50">
                    </div>
                    <div class="u-form-group u-form-group-4">
                        <label class="u-label">Код подтверждения</label>
                        <input asp-for="ConfirmationCodeFromUser" type="text" placeholder="Введите 6 полученных цифр" name="text" class="u-input u-input-rectangle u-palette-1-light-3 u-radius u-input-4" maxlength="6">
                    </div>
                    <div class="u-align-left u-form-group u-form-submit">
                        <button asp-page-handler="Register" name="register" class="u-active-palette-1-dark-2 u-border-none u-btn u-btn-round u-btn-submit u-button-style u-custom-color-1 u-hover-palette-1-dark-1 u-radius u-btn-1">Зарегистрироваться</button>
                    </div>
                    <button asp-page-handler="RequestCode" name="code" class="u-active-palette-1-dark-2 u-border-none u-btn u-btn-round u-button-style u-custom-color-1 u-dialog-link u-hover-palette-1-dark-1 u-radius u-btn-3">Получить код</button>
                </form>
            </div>
            <a href="#zatemnenie" class="u-active-palette-1-dark-2 u-border-none u-btn u-btn-round u-button-style u-custom-color-1 u-dialog-link u-hover-palette-1-dark-1 u-radius u-btn-2">Проверить логин</a>
        </div>
        @if (Model.ShowSuccessMessage)
        {
            <div id="zatemnenie">
                <div id="okno">
                <div class="u-container-style u-dialog u-gradient u-radius u-shape-round u-dialog-1">
                    <div class="u-container-layout u-container-layout-1">
                        <h5 class="u-align-center u-text u-text-custom-color-9 u-text-default u-text-1">Успешная регистрация. Нажмите продолжить чтобы перейти в профиль.</h5>
                        <a href="/Index" class="u-active-palette-1-dark-2 u-border-none u-btn u-btn-round u-button-style u-hover-palette-1-dark-1 u-radius u-btn-1" style="margin:10px,10px,10px,10px; vertical-align:bottom;">Продолжить</a>
                    </div>
                </div>
            </div>
        </div>
        }
    </section>
</body>
</html>
