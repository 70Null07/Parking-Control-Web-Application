    <script type="text/javascript">
        // Получите ссылку на изображение (замените на свой URL)
        // Функция для обновления изображения
        var curr_img = 0;

        function updateImage() {
            var seed = (new Date()).getTime();

            const imageUrl = "https://parkingcontrolcomplex.ru/images/parkingload_" + curr_img + ".jpg" + "?" + seed;

            const imgElement = document.getElementById("myimg");
            imgElement.src = imageUrl;

            if (curr_img < 7)
                curr_img++;
            else
                curr_img = 0;
                
        }
        // Вызов функции updateImage() каждые 10 секунд
        setInterval(updateImage, 10000);
    </script>

