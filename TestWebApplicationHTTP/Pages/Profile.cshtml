@page
@model TestWebApplicationHTTP.Pages.ProfileModel
@{
    ViewData["Title"] = "Профиль";
    ViewData["AuthSwitch"] = "Профиль";
}

<!DOCTYPE html>
<html style="font-size: 14px;" lang="ru">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <title>Профиль</title>
    <link rel="stylesheet" href="~/css//nicepage.css" media="screen">
    <link rel="stylesheet" href="~/css/profile.css" media="screen">
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">
</head>
<body class="u-body u-xl-mode" data-lang="ru">
    <section class="u-clearfix u-gradient u-section-1">
        <div class="u-clearfix u-sheet u-sheet-1">
            <h4 class="u-align-center u-text u-text-default u-text-1">Личные данные</h4>
            <img class="u-image u-image-contain u-image-round u-radius u-image-1" src="images/auth_person.png" data-image-width="420" data-image-height="419" alt="drawing of a user">
            <p class="u-align-center u-text u-text-default u-text-2">Основные данные </p>
            <div class="u-form u-form-1">
                <form method="post" class="u-clearfix u-form-spacing-10 u-form-vertical u-inner-form" style="padding: 10px;">
                    <div class="u-form-group u-form-name">
                        <label class="u-label">Имя</label>
                        <input asp-for="UserInfo.Name" type="text" placeholder="Введите Ваше имя" class="u-input u-input-rectangle u-radius u-input-1" required="">
                    </div>
                    <div class="u-form-email u-form-group">
                        <label class="u-label">Фамилия</label>
                        <input asp-for="UserInfo.SurName" type="text" placeholder="Введите Вашу фамилию" class="u-input u-input-rectangle u-radius u-input-2" required="">
                    </div>
                    <div class="u-form-group u-form-phone u-form-group-3">
                        <label class="u-label">Телефон</label>
                        <input asp-for="UserInfo.Phone" type="text" placeholder="Формат телефона: +7(912)3456789" class="u-input u-input-rectangle u-radius u-input-3" required="">
                    </div>
                    <div class="u-align-right u-form-group u-form-submit">
                        <button asp-page-handler="SaveInfo" class="u-btn u-btn-round u-btn-submit u-button-style u-custom-color-1 u-radius u-btn-1">Сохранить</button>
                    </div>
                </form>
            </div>
            <p class="u-align-center u-text u-text-default u-text-3">Безопасность </p>
            <div class="u-form u-form-2">
                <form method="post" class="u-clearfix u-form-horizontal u-form-spacing-10 u-inner-form" style="padding: 10px;">
                    <div class="u-form-email u-form-group">
                        <label for="email-81e1" class="u-label">Пароль</label>
                        <input asp-for="User.Password" type="email" placeholder="Введите текущий пароль" name="email" class="u-input u-input-rectangle u-radius u-input-4" required="">
                    </div>
                    <div class="u-form-group u-form-group-6">
                        <label for="text-f07b" class="u-label">Пароль</label>
                        <input asp-for="NewPassword" type="text" placeholder="Введите новый пароль" name="text" class="u-input u-input-rectangle u-radius u-input-5">
                    </div>
                    <div class="u-align-left u-form-group u-form-submit">
                        <button asp-page-handler="SavePassword"  class="u-btn u-btn-round u-btn-submit u-button-style u-custom-color-1 u-radius u-btn-2">Сохранить</button>
                    </div>
                </form>
            </div>
            <form method="post">
                <button asp-page-handler="Exit" class="u-align-center u-text-3 u-btn u-btn-round u-button-style u-custom-color-1 u-radius u-btn-2">Выйти из аккаунта</button>
            </form>
        </div>
    </section>
</body>
</html>