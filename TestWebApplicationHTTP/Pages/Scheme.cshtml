@page
@model TestWebApplicationHTTP.Pages.SchemeModel
@{
    ViewData["Title"] = "Схема";
    ViewData["AuthSwitch"] = Model.AuthSwitch;
}

<!DOCTYPE html>
<html style="font-size: 14px;" lang="ru">
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta charset="utf-8">
    <title>Схема</title>
    <link rel="stylesheet" href="~/css/nicepage.css" media="screen">
    <link rel="stylesheet" href="~/css/Схема.css" media="screen">
    <script type="text/javascript">
        // Получите ссылку на изображение (замените на свой URL)
        // Функция для обновления изображения
        function updateImage() {
            var seed = (new Date()).getTime();

            const imageUrl = "https://parkingcontrolcomplex.ru/images/scheme_old.png" + "?" + seed;

            const imgElement = document.getElementById("myimg");
            imgElement.src = imageUrl;
        }
        // Вызов функции updateImage() каждые 10 секунд
        setInterval(updateImage, 10000);
    </script>
    <link id="u-theme-google-font" rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:100,100i,300,300i,400,400i,500,500i,700,700i,900,900i|Open+Sans:300,300i,400,400i,500,500i,600,600i,700,700i,800,800i">
</head>
<body class="u-body u-xl-mode" data-lang="ru">
    <section class="u-clearfix u-gradient u-section-1">
        <div class="u-clearfix u-sheet u-sheet-1">
            <label style="text-align:center; font-size: 14px; margin-top: 20px; font-palette:light;" class="u-image">Текущая загруженность - @Model.CurrentLoad</label>
            <img id="myimg" class="u-image u-image-round u-radius u-image-1" src="https://parkingcontrolcomplex.ru/images/scheme_old.png" alt="" data-image-width="1059" data-image-height="629">
            <a href="https://parkingcontrolcomplex.ru/broadcast" class="u-btn u-btn-round u-button-style u-custom-color-1 u-radius u-btn-1">Вид с камеры</a>
            <a href="https://parkingcontrolcomplex.ru/loadbroadcast" class="u-btn u-btn-round u-button-style u-custom-color-1 u-radius u-btn-2">Загруженность с камеры </a>
        </div>
    </section>
</body>
</html>